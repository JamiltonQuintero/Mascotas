<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/bordes_imagen"
                android:paddingLeft="@dimen/bordes_imagen"
                android:paddingTop="@dimen/bordes_imagen">

                <ImageView
                    android:id="@+id/imgMascotas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/m1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp">

                    <ImageButton
                        android:id="@+id/bLike"
                        android:layout_width="@dimen/tama単o_i_likes"
                        android:layout_height="@dimen/tama単o_i_likes"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/likee" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvnombreMascotaCV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="60dp"
                            android:paddingLeft="@dimen/bordes_imagen"
                            android:paddingTop="10dp"
                            android:text="@string/nombre_mascota" />

                        <TextView
                            android:id="@+id/tvcanLikesCV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="@dimen/bordes_imagen"
                            android:paddingLeft="@dimen/bordes_imagen"
                            android:text="@string/cantidad_likes" />

                        <ImageView
                            android:id="@+id/cLikes"
                            android:layout_width="@dimen/tama単o_i_likes"
                            android:layout_height="@dimen/tama単o_i_likes"
                            android:src="@drawable/clikes" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>